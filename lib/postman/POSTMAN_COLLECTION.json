      "name": "1. Authentication",
      "item": [
        {
          "name": "Login (Admin/Doctor/Super Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const response = pm.response.json();",
                  "",
                  "pm.test('Response has sessionToken', function () {",
                  "    pm.expect(response).to.have.property('sessionToken');",
                  "});",
                  "",
                  "if (response.sessionToken) {",
                  "    // حفظ في Collection Variables",
                  "    pm.collectionVariables.set('session_token', response.sessionToken);",
                  "    ",
                  "    // حفظ في Environment Variables",
                  "    pm.environment.set('session_token', response.sessionToken);",
                  "    ",
                  "    console.log('✅ Session Token saved:', response.sessionToken);",
                  "    console.log('✅ User ID:', response.id || response.objectId);",
                  "    console.log('✅ Username:', response.username);",
                  "    console.log('✅ Full Name:', response.fullName);",
                  "    console.log('✅ Role:', response.role);",
                  "}",
                  "",
                  "// التحقق من الدور",
                  "if (response.role === 'SUPER_ADMIN' || response.role === 'Admin') {",
                  "    console.log('✅ تم تسجيل الدخول كأدمن/سوبر أدمن بنجاح!');",
                  "    pm.test('User is Admin or SUPER_ADMIN', function () {",
                  "        pm.expect(response.role === 'Admin' || response.role === 'SUPER_ADMIN').to.be.true;",
                  "    });",
                  "} else {",
                  "    console.log('⚠️ الدور:', response.role);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Parse-Application-Id",
                "value": "{{app_id}}"
              },
              {
                "key": "X-Parse-Client-Key",
                "value": "null"
              },
              {
                "key": "X-Parse-Master-Key",
                "value": "{{master_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"super_admin\",\n  \"password\": \"your_super_admin_password\",\n  \"platform\": \"flutter\",\n  \"locale\": \"ar\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/loginUser",
              "host": ["{{base_url}}"],
              "path": ["loginUser"]
            }
          }
        },
